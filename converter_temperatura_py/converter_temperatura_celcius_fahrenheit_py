def convertor():
    escolha = input ("Digite 'C' para converter de celsius para fahrenheit ou 'F' para converter de fahrenheit para celcius: ")

    if escolha == 'C':
        celsius = int(input("Digite a temperatura em celsius: "))
        fahrenheit = (celsius * 9/5) + 32
        print (f"A temperatura convertida para celsius é: {celsius}°C")
        print (f"A temperatura convertida para fahrenheit é: {fahrenheit}°F")

    elif escolha == 'F':
        farenheit = int(input("Digite a temperatura em fahrenheit: "))
        celsius = (fahrenheit - 32) * 5/9
       
        